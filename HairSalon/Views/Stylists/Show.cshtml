<h3>Here are all the clients of this Stylist:</h3>

<ol>
  @if (Model["client"].Count == 0)
  {
    <p>No clients have been added</p>
  }
  @foreach (var client in @Model["client"])
  {
    <li><a href='/stylists/@Model["stylist"].stylist_id/clients/@client.client_id'>@client.client_name</a></li>
  }
</ol>

<h3>@Model["stylist"].stylist_name's Specialties:</h3>
<ol>
  @if (Model["stylistSpecialties"].Count == 0)
  {
    <p>No specialties have been added</p>
  }
  @if (Model["stylistSpecialties"].Count != 0)
  {
    @foreach (var specialty in Model["stylistSpecialties"])
    {
      <li><a href="/specialties/@specialty.specialty_id">@specialty.specialty_style</a></li>
    }
  }
</ol>
<h3>Add a specialty to this stylist:</h3>
<form action="/stylists/@Model["stylist"].stylist_id/addSpecialty" method="post" >
  <select name='specialtyId' type='number'>
    <option value = 0>None</option>
    @foreach (var specialty in @Model["specialty"])
    {
      <option value='@specialty.specialty_id'>@specialty.specialty_style</option>
    }
  </select>
  <button type="submit">Add Specialty</button>
</form>

<p><a href='/stylists/@Model["stylist"].stylist_id/clients/new'>Add a new client</a></p>
<p><a href='/stylists'>Return to stylist list</a></p>

<p><a href='/'>Return to Main Page</a></p>
