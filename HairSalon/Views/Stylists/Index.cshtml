<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in Model)
{
  <h3><a href='/stylists/@stylist.stylist_id'>@stylist.stylist_name</a></h3>
}

<p><a href='/'>Back home</a></p>

<form action="/stylists/delete" method="post">
  <button type="submit">Clear stylist list</button>
</form>
